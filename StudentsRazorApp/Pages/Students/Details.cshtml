
@page
@model StudentsRazorApp.Pages.Students.DetailsModel
@{

    ViewData["Title"] = "Details";
    var photopath = "~/Images/" + (Model.StudentsPropertyDetails.studentphoto ?? "default.jpg");
}

<style>
    .btn{

        width:80px;

    }
</style>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>@Model.StudentsPropertyDetails.StudentName</h3>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photopath" asp-append-version="true" />
                <h4>Student ID: @Model.StudentsPropertyDetails.StudentID</h4>
                <h4>Student Branch: @Model.StudentsPropertyDetails.StudentBranches</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-page="Index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Delete</a>
            </div>


        </div>
    </div>
</div>